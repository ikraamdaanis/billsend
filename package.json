{
  "name": "billsend",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "tsc && vite build",
    "ts-lint": "turbo run ts-lint",
    "ts-lint:watch": "turbo run ts-lint:watch",
    "db:start": "cd applications/app && bun run db:start",
    "db:stop": "cd applications/app && bun run db:stop",
    "db:push": "cd applications/app && bun run db:push",
    "db:seed": "cd applications/app && bun run db:seed",
    "db:studio": "cd applications/app && bun run db:studio"
  },
  "packageManager": "bun@1.3.2",
  "dependencies": {
    "dayjs": "^1.11.19"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.1"
  },
  "workspaces": [
    "applications/*",
    "packages/*"
  ]
}
